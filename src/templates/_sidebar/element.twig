<fieldset>
    <legend class="h6">{{- "Page Cache"|t('pagecache') -}}</legend>
    <div class="meta">
        <div class="field">
            <div class="heading">
                <label for="status">{{- "Status"|t('site') -}}</label>
            </div>
            <div class="input ltr flex gap-xs">
                {% if isCached %}
                    <span>{{- "Page is cached"|t('pagecache') }}</span>
                    <span><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big-icon lucide-circle-check-big"><path d="M21.801 10A10 10 0 1 1 17 3.335"/><path d="m9 11 3 3L22 4"/></svg></span>
                {% else %}
                    <span>{{- "Page is not cached"|t('pagecache') }}</span>
                    <span><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-x-icon lucide-circle-x"><circle cx="12" cy="12" r="10"/><path d="m15 9-6 6"/><path d="m9 9 6 6"/></svg></span>
                {% endif %}
            </div>
        </div>

        <div class="field">
            <div class="heading">
                <label for="refresh">{{- "Actions"|t('pagecache') -}}</label>
            </div>
            <div class="input flex-col items-start gap-xs" style="align-items: flex-start;">
                <form method="post" action="">
                    {{- csrfInput() -}}
                    <input type="hidden" name="action" value="pagecache/cache/refresh">
                    <input type="hidden" name="entryId" value="{{- entry.id -}}">
                    <button type="submit" id="refresh" class="btn small flex gap-xs">
                        {% if isCached %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-refresh-cw-icon lucide-refresh-cw"><path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"/><path d="M21 3v5h-5"/><path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"/><path d="M8 16H3v5"/></svg>
                            <span>{{- "Refresh cache"|t('pagecache') -}}</span>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-save-icon lucide-save"><path d="M15.2 3a2 2 0 0 1 1.4.6l3.8 3.8a2 2 0 0 1 .6 1.4V19a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2z"/><path d="M17 21v-7a1 1 0 0 0-1-1H8a1 1 0 0 0-1 1v7"/><path d="M7 3v4a1 1 0 0 0 1 1h7"/></svg>
                            <span>{{- "Create cache"|t('pagecache') -}}</span>
                        {% endif %}
                    </button>
                </form>

                <form method="post" action="">
                    {{- csrfInput() -}}
                    <input type="hidden" name="action" value="pagecache/cache/delete">
                    <input type="hidden" name="entryId" value="{{- entry.id -}}">
                    <button type="submit" id="delete" class="btn small flex gap-xs">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash2-icon lucide-trash-2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/><line x1="10" x2="10" y1="11" y2="17"/><line x1="14" x2="14" y1="11" y2="17"/></svg>
                        <span>{{- "Delete cache"|t('pagecache') -}}</span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</fieldset>
